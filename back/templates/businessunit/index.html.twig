{% extends 'base.html.twig' %}

{% block title %}Businessunit index{% endblock %}

{% block body %}
    <h1>Businessunit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for businessunit in businessunits %}
            <tr>
                <td>{{ businessunit.id }}</td>
                <td>{{ businessunit.name }}</td>
                <td>
                    <a href="{{ path('businessunit_show', {'id': businessunit.id}) }}">show</a>
                    <a href="{{ path('businessunit_edit', {'id': businessunit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('businessunit_new') }}">Create new</a>
{% endblock %}
